@inherits Umbraco.Web.Mvc.UmbracoViewPage<IBanner>
<!-- Banner -->
<section id="banner" style="background-image: url(@Model.MainImage.Url)" >
    <div class="inner">
        <h1>
            <span>
               @Model.Heading
            </span>
        </h1>
        <h4>
            @Model.SubHeading
        </h4>
        <ul class="actions">
            @foreach (var link in Model.CTA)
            {
                <li><a href="@link.Url" class="button alt">@link.Name</a></li>
            }
            
        </ul>
</div>
</section>
